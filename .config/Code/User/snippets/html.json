{
	// Place your snippets for html here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"click": {
		"prefix": "a-click",
		"body": [
			"(click)=\"${1:expression}($2)\""
		],
		"description": "Angular (click) binding"
	},
	"ngIf": {
		"prefix": "aif",
		"body": [
			"*ngIf=\"${1:expression}\""
		],
		"description": "Angular *ngIf"
	},
	"ngIfElse": {
		"prefix": "ael",
		"body": [
			"*ngIf=\"${1:expression}; else ${2:templateName}\""
		],
		"description": "Angular *ngIfElse"
	},
	"ng-template": {
		"prefix": "ngt",
		"body": [
			"<ng-template #${1:outlet}>$0</ng-template>"
		],
		"description": "Angular ng-template"
	},
	"ngForm": {
		"prefix": "aform",
		"body": [
			"<form [formGroup]=\"${1:form}\" (ngSubmit)=\"${2:submit}()\">",
			"</form>"
		],
		"description": "Form with ngSubmit and form attributes"
	},
	"ngFormSubmit": {
		"prefix": [
			"aformsubmit",
			"afs"
		],
		"body": "<button class=\"${1:btn btn-dark}\" type=\"submit\" [disabled]=\"form.invalid\">${2:Save}</button>",
		"description": "Angular form submit"
	},
	"ngFor": {
		"prefix": [
			"ngfor",
			"afor"
		],
		"body": [
			"*ngFor=\"let ${1:item} of ${2:list}\"${0}"
		],
		"description": "Angular *ngFor"
	},
}